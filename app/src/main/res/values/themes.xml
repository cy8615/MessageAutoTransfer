<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MessageAutoTransfer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#165DFF</item>
        <item name="colorPrimaryVariant">#0D47CC</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#36CFC9</item>
        <item name="colorSecondaryVariant">#1B9A95</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#F2F3F5</item>
        <item name="colorSurface">@android:color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">#1D2129</item>
        <item name="android:textColorSecondary">#4E5969</item>
        
        <!-- Switch colors -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="colorControlActivated">#165DFF</item>
    </style>
    
    <!-- Custom button style -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#165DFF</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Custom card style -->
    <style name="CustomCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>
</resources>
