<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive configuration files -->
        <exclude domain="sharedpref" path="message_forwarder_config.xml" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for most data -->
        <include domain="sharedpref" path="." />
        <!-- But exclude sensitive configuration files -->
        <exclude domain="sharedpref" path="message_forwarder_config.xml" />
    </device-transfer>
</data-extraction-rules>
